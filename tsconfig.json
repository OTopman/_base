{
	"compilerOptions": {
		"lib": ["es5", "es6", "ESNext"],
		"target": "es6",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*", "./build/*"]
		}
	},
	"exclude": ["./.history", "./.vscode", "node_modules"],
	"include": ["src/**/*"],
	"buildOptions": {
		"verbose": true
	},
	"compileOnSave": true,
	// "files": ["./countries.json", "./fcm.json"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
		/* "compilerOptions": {
			"module": "CommonJS",
			"baseUrl": "./",
			"paths": {
				"@/*": ["./src/*", "./build/*"],
				"@prisma/client": ["./prisma/client/generated"]
			}
		} */
	}
}
